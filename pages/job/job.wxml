<view class='page'>
  <!-- 标题 -->
  <text class='title'>工作经历</text>

  <!-- 工作经历 -->
  <view class='job' wx:for="{{ projectInfo }}" >
    <wux-card title="{{ item.companyName }}">
      <view slot="body">
        <wux-cell>
          <wux-input label="时间" defaultValue='{{ item.duration }}' disabled/>
        </wux-cell>
        <wux-cell>
          <wux-input label="部门" defaultValue='{{ item.department }}' disabled/>
        </wux-cell>
        <wux-cell>
          <wux-input label="岗位" defaultValue='{{ item.job }}' disabled/>
        </wux-cell>
        <wux-cell>
          <!-- <wux-textarea maxlength="-1" autoHeight="true" defaultValue="{{ item.description }}" disabled/> -->
          <view>{{ item.description }}</view>
        </wux-cell>
      </view>
    </wux-card>
  </view>
</view>


<!-- 底部导航栏 -->
<view class='blue-tabbar'>
  <i-tab-bar current="{{ current }}" color="#2d8cf0" bindchange="clickTabBar" fixed="true">
    <i-tab-bar-item key="index" icon="homepage" current-icon="homepage_fill" title="首页"></i-tab-bar-item>
    <i-tab-bar-item key="job" icon="group" current-icon="group_fill" title="工作经历"></i-tab-bar-item>
    <i-tab-bar-item key="project" icon="remind" current-icon="remind_fill" title="项目实践"></i-tab-bar-item>
    <i-tab-bar-item key="skill" icon="mine" current-icon="mine_fill" title="专业技能"></i-tab-bar-item>
  </i-tab-bar>
